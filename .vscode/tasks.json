{
    // See https://go.microsoft.com/fwlink/?LinkId=733558.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pylint",
            "type": "shell",
            "command": "pylint --msg-template \"{path}:{line}:{column}:{category}:{symbol} - {msg}\" awe",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):(\\w+):(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
